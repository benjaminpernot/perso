<UserControl x:Class="Image_Viewer_for_Visual_Studio.ToolWindow1Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="{DynamicResource VsBrush.Window}"
             Foreground="{DynamicResource VsBrush.WindowText}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="MyToolWindow">
    <Grid>
        <DockPanel>
            <TextBox Name="textboxAddress" DockPanel.Dock="Top"></TextBox>
            <TextBox Name="textboxWidth" DockPanel.Dock="Top">128</TextBox>
            <TextBox Name="textboxHeight" DockPanel.Dock="Top">128</TextBox>
            <Button Name="buttonUpdate" Click="ButtonUpdateOnClick" DockPanel.Dock="Top">Update</Button>
            <TextBox Name="buttonError" Grid.Row="5" Height="42" DockPanel.Dock="Top" VerticalScrollBarVisibility="Auto"></TextBox>
            <Image Name="image" Stretch="Fill"></Image>
        </DockPanel>
    </Grid>
</UserControl>
